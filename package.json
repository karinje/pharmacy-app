    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "lucide-svelte": "^0.553.0",
    "openai": "^4.20.0",
    "svelte": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
